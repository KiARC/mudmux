#! /bin/bash

MEDMUX_BIN_PATH="$(unset CDPATH && cd $(dirname `pwd`/${BASH_SOURCE}) && pwd)"
export MEDMUX_BIN_PATH

MEDMUX_INSTALL_PATH="$(dirname ${MEDMUX_BIN_PATH})"
export MEDMUX_INSTALL_PATH

MEDMUX_SRC_PATH="${MEDMUX_INSTALL_PATH}/src"
export MEDMUX_SRC_PATH

# Update the path only if necessary
case ":${PATH:=$MEDMUX_BIN_PATH}:" in
    *:"$MEDMUX_BIN_PATH":*)  ;;
    *) PATH="$PATH:$MEDMUX_BIN_PATH"  ;;
esac


